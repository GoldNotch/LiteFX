{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-x64",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/../out/build/${presetName}",
      "installDir": "${sourceDir}/../out/install/${presetName}",
      "toolchainFile": "${sourceDir}/modules/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/../out/install/${presetName}",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/modules/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "X_VCPKG_APPLOCAL_DEPS_INSTALL": "ON"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Windows" ]
        }
      }
    },
    {
      "name": "windows-x64-debug",
      "displayName": "Windows x64 (Debug)",
      "inherits": "windows-x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-x64-release",
      "displayName": "Windows x64 (Release)",
      "inherits": "windows-x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-x64-debug-vk-only",
      "displayName": "Windows x64 (Only Vulkan)",
      "inherits": "windows-x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_DIRECTX_12_BACKEND": "OFF"
      }
    },
    {
      "name": "windows-x64-debug-dx12-only",
      "displayName": "Windows x64 (Only DirectX 12)",
      "inherits": "windows-x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_VULKAN_BACKEND": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "windows-x64-debug",
      "nativeToolOptions": [ "-v" ]
    },
    {
      "name": "debug-vk",
      "configurePreset": "windows-x64-debug-vk-only",
      "nativeToolOptions": [ "-v" ]
    },
    {
      "name": "debug-dx12",
      "configurePreset": "windows-x64-debug-dx12-only",
      "nativeToolOptions": [ "-v" ]
    },
    {
      "name": "release",
      "configurePreset": "windows-x64-release"
    }
  ]
}